{
	"name": "fragment-editor",
	"displayName": "FragmentEditor",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"keybindings": [

		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fragment",
					"title": "Fragment",
					"icon": "media/icon.png"
				}
			]
		},
		"views": {
			"fragment": [
				{
					"id": "fragmentEditor",
					"name": "Fragment Editor"
				}
			]
		},
		"commands": [
			{
				"command": "fragmentEditor.addFolder",
				"title": "Add Folder",
				"icon": "media/folder.png"
			},
			{
				"command": "fragmentEditor.addFragment",
				"title": "Add Fragment",
				"icon": "media/fragment.png"
			},
			{
				"command": "fragmentEditor.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "fragmentEditor.filter",
				"title": "Filter",
				"icon": "media/filter.png"
			},
			{
				"command": "fragmentEditor.reset",
				"title": "Reset",
				"icon": "media/reset.png"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "fragmentEditor.addFragment",
					"group": "9_cutcopypaste",
					"when": "editorHasSelection"
				}
			],
			"view/title": [
				{
					"command": "fragmentEditor.addFolder",
					"group": "navigation"
				},
				{
					"command": "fragmentEditor.addFragment",
					"group": "navigation"
				},
				{
					"command": "fragmentEditor.filter",
					"group": "navigation"
				},
				{
					"command": "fragmentEditor.reset",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fragmentEditor.deleteEntry",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/sql.js": "0.0.29",
		"sql.js": "^0.5.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	}
}
