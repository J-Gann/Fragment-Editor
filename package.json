{
	"name": "fragment-editor",
	"displayName": "FragmentEditor",
	"description": "",
	"version": "0.0.1",
	"engines":
	{
		"vscode": "^1.33.0"
	},
	"categories":
	[
		"Other"
	],
	"activationEvents":
	[
		"onView:fragmentEditor"
	],
	"main": "./out/extension.js",
	"contributes":
	{
		"viewsContainers":
		{
			"activitybar":
			[
				{
					"id": "fragment",
					"title": "Fragment",
					"icon": "media/icon.svg"
				}
			]
		},
		"views":
		{
			"fragment":
			[
				{
					"id": "fragmentEditor",
					"name": "Fragment Editor"
				}
			]
		},
		"commands":
		[
			{
				"command": "fragmentEditor.addEntry",
				"title": "Add"
			},		
			{
				"command": "fragmentEditor.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "fragmentEditor.editEntry",
				"title": "Edit"
			},
			{
				"command": "fragmentEditor.sqlRequest",
				"title": "SQL"
			}
		],
		"menus":
		{
			"view/title":
			[
				{
					"command": "fragmentEditor.addEntry",
					"group": "navigation"
				},
				{
					"command": "fragmentEditor.sqlRequest",
					"group": "navigation"
				}
			],
			"view/item/context":
			[
				{
					"command": "fragmentEditor.deleteEntry",
					"group": "inline"
				},
				{
					"command": "fragmentEditor.editEntry",
					"group": "inline"
				}
			]
		}
	},
	"scripts":
	{
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies":
	{
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": 
	{
		"sqllite": "^3.0.3"
	}
}
